[Unit]
Description=Bevferle Server

[Service]
WorkingDirectory=/var/www/bevferle/
ExecStart=/usr/bin/dotnet /var/www/bevferle/Server.dll
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=kestrel-bevferle-server
User=ec2-user
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false

[Install]
WantedBy=multi-user.target